@model TServicesDB.Models.TSRoute

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Изменить</h1>

<h4>ТК-Маршруты</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TSRouteID" />
            <div class="form-group">
                <label asp-for="numberRoute" class="control-label"></label>
                <input asp-for="numberRoute" class="form-control" />
                <span asp-validation-for="numberRoute" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="firstCity" class="control-label"></label>
                <input asp-for="firstCity" class="form-control" />
                <span asp-validation-for="firstCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastCity" class="control-label"></label>
                <input asp-for="lastCity" class="form-control" />
                <span asp-validation-for="lastCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="time" class="control-label"></label>
                <input asp-for="time" class="form-control" />
                <span asp-validation-for="time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
