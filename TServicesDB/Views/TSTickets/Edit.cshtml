@model TServicesDB.Models.TSTicket

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Изменить</h1>

<h4>ТК-Билеты</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TSTicketID" />
            <div class="form-group">
                <label asp-for="number_route" class="control-label"></label>
                <input asp-for="number_route" class="form-control" />
                <span asp-validation-for="number_route" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mail_client" class="control-label"></label>
                <input asp-for="mail_client" class="form-control" />
                <span asp-validation-for="mail_client" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="stopover" class="control-label"></label>
                <input asp-for="stopover" class="form-control" />
                <span asp-validation-for="stopover" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date_sale" class="control-label"></label>
                <input asp-for="date_sale" class="form-control" />
                <span asp-validation-for="date_sale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date_route" class="control-label"></label>
                <input asp-for="date_route" class="form-control" />
                <span asp-validation-for="date_route" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
